<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#444555"
        >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#666999"
        android:id="@+id/mydrawingimageview"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/mydrawingimageview"
        android:weightSum="3"
        android:padding="5dp"
        android:layout_marginLeft="5dp"

        >
        <TextView
            android:layout_width="10dp"
            android:textColor="#eeeeee"
            android:layout_weight="1"
            android:text="Drawing's Title"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="#eeeeee"

            android:text="Drawing's Title"
            android:id="@+id/mydrawinglisttitle"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="25dp"
        android:padding="10dp"
        android:id="@+id/mydrawingdescription"
        android:textColor="#ffffff"

        android:layout_below="@+id/mydrawingimageview"
        android:text="Drawing's Description here"
        />
</RelativeLayout>
    </RelativeLayout>
