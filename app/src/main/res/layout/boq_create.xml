<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="6"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".SignUp"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstlayout"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor = "#000000"
            android:textSize="20sp"
            android:padding="20dp"
            android:maxLines="1"
            android:text="Particulars:"
            />
        <EditText
            android:layout_weight="1"
            android:padding="20dp"
            android:textColor = "#000000"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Particulars"
            android:id="@+id/boq_particulars_create"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor = "#000000"
            android:textSize="20sp"
            android:padding="20dp"
            android:maxLines="1"
            android:text="Quantity:"
            />
        <EditText
            android:layout_weight="1"
            android:padding="20dp"
            android:textColor = "#000000"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:id="@+id/boq_quantity_create"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor = "#000000"
            android:textSize="20sp"
            android:padding="20dp"
            android:maxLines="1"
            android:text="Rate:"
            />
        <EditText
            android:layout_weight="1"
            android:padding="20dp"
            android:textColor = "#000000"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rate"
            android:id="@+id/boq_rates_create"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor = "#000000"
            android:textSize="20sp"
            android:padding="20dp"
            android:maxLines="1"
            android:text="Unit:"
            />
        <EditText
            android:layout_weight="1"
            android:padding="20dp"
            android:textColor = "#000000"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unit"
            android:id="@+id/boq_unit_create"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor = "#000000"
            android:textSize="20sp"
            android:padding="20dp"
            android:maxLines="1"
            android:text="Total:"
            />
        <EditText
            android:layout_weight="1"
            android:padding="20dp"
            android:textColor = "#000000"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total"
            android:id="@+id/boq_total_create"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="10dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginBottom="0dp"

            >
            <ImageButton
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:src="@drawable/ic_action_edit"
                android:text="Edit"
                android:id="@+id/edit_scopeof_work"
                android:cropToPadding="true"
                android:background="@drawable/roundcorner"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_marginBottom="0dp"

            >
            <ImageButton
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:src="@drawable/ic_action_save"
                android:text="Save"
                android:id="@+id/save_scope_of_work"
                android:cropToPadding="true"
                android:background="@drawable/roundcorner"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
